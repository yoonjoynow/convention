root = true

[*]
charset = utf-8
end_of_line = lf

indent_style = space
indent_size = 4
tab_width = 4

insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{kt,kts}]
indent_size = 4
ij_kotlin_allow_trailing_comma=true
ij_kotlin_allow_trailing_comma_on_call_site=true

[*.{yml,yaml}]
indent_size = 2
